{
    "engine": {
        "endpoint": "ws://0.0.0.0:9123",
        "namespace": "dev",
        "database": "bioma",
        "username": "root",
        "output_dir": ".output",
        "local_store_dir": ".output/store",
        "hf_cache_dir": ".output/cache/huggingface/hub"
    },
    "rag_endpoint": "http://0.0.0.0:5766",
    "tools": [
        {
            "host": true,
            "server": {
                "name": "bioma-tool",
                "enabled": true,
                "transport": "stdio",
                "command": "target/release/examples/mcp_server",
                "args": [
                    "--transport",
                    "stdio",
                    "--log-file",
                    ".output/mcp_server-bioma.log"
                ]
            }
        },
        {
            "host": true,
            "server": {
                "name": "filesystem",
                "enabled": true,
                "transport": "stdio",
                "command": "docker",
                "args": [
                    "run",
                    "-i",
                    "--rm",
                    "--mount",
                    "type=bind,src=/Users/rozgo/BiomaAI,dst=/Users/rozgo/BiomaAI",
                    "mcp/filesystem",
                    "/Users/rozgo/BiomaAI"
                ]
            }
        }
    ]
}