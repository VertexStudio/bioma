{
  "name": "bioma-client",
  "engine": {
    "endpoint": "ws://0.0.0.0:9123",
    "namespace": "dev",
    "database": "bioma",
    "username": "root",
    "output_dir": ".output",
    "local_store_dir": ".output/store",
    "hf_cache_dir": ".output/cache/huggingface/hub"
  },
  "rag_endpoint": "http://0.0.0.0:5766",
  "servers": [
    {
      "name": "bioma-tool",
      "transport": "stdio",
      "command": "target/release/examples/mcp_server",
      "args": ["--log-file", ".output/mcp_server-bioma.log", "stdio"]
    },
    {
      "name": "mysql-server",
      "transport": "stdio",
      "command": "mcp-server-mysql",
      "args": [],
      "env": {
        "MYSQL_HOST": "127.0.0.1",
        "MYSQL_PORT": "3306",
        "MYSQL_USER": "root",
        "MYSQL_PASSWORD": "root",
        "MYSQL_DB": "your_database"
      }
    }
  ]
}
